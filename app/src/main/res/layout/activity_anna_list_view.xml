<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.delle6330.assignment1.Anna_ListView_Activity">
    <ProgressBar
        android:id="@+id/progressBarAnna"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
         />

    <ListView
        android:id="@+id/anna_stations_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <ListView
        android:id="@+id/questionViewAnna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrass"
        >

    </ListView>

    <Button
        android:id="@+id/answerButtonAnna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBitterSweetDark"
        android:layout_alignBottom="@+id/questionViewAnna"
        android:layout_alignParentRight="true"
        android:text="Answer"/>
</RelativeLayout>
